---
export interface Props {
  title: string;
  items: Array<string>;
  description: Array<string>;
}
const { title, items, description } = Astro.props;
import { Icon } from "astro-icon";
---

<div id="faq" class="lg:px-90 <xl:px-10 mt-12 pb-47">
  <h1
    class="dark:text-white light:text-black text-center font-mono tracking-tighter text-2xl xl:text-6xl font-600 mb-10"
  >
    {title}
  </h1>
  {
    items.map((item, index) => (
      <div>
        <div class="acordeon p-3 dark:text-white light:text-black items-center  flex border-b-2 justify-between  border-[#FF17E8C9]">
          <button id="boton" class="boton text-justify mr-3  xl:text-2xl font-700 ">
            {item}
          </button>
          
          <div class="w-10  icono transform  transition">
            <Icon
              name="ic:round-keyboard-arrow-down" class="w-8 mx-auto"
            />
          </div>
        </div>
        <div
          class="content tranform transition duration-300 w-full hidden dark:text-white light:text-black border-b-2 border-[#FF17E8C9] "
        >
          { description[index] }
        </div>
      </div>
    ))
  }
  
</div>

<script>
  var co = document.getElementsByClassName("acordeon");
  var content = document.getElementsByClassName("content");
  var icon = document.getElementsByClassName("icono");
  var fin = co.length;
  for (let i = 0; i < fin; i++) {
    co[i].addEventListener("click", function () {
      co[i].classList.toggle("!border-0");
      icon[i].classList.toggle("rotate-180");
      content[i].classList.toggle("py-5");
      content[i].classList.toggle("hidden");
    });
  }
  
</script>
